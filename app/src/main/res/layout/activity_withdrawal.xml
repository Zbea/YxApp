<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">


    <include layout="@layout/include_title"/>

    <LinearLayout
        android:background="@color/color_f6f6f6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46">
        <TextView
            android:text="到账银行卡"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="(预计3个工作日内到账)"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_606060"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_left"
            android:src="@drawable/dqyhkbs"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@id/iv_left"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_bank"
                    android:text="中国农业银行卡"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_where"
                    android:text="(深圳支行)"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_606060"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_card_num"
                android:text="5454 4545 5545 54545 5454 "
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_606060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>

    <TextView
        android:background="@drawable/white_bg"
        android:text="请输入提现金额:"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_333333"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_741177"
            android:text="元"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_toLeftOf="@id/tv_yuan"
            android:inputType="numberDecimal"
            android:textCursorDrawable="@drawable/shape_edit_cursor_color"
            android:id="@+id/edit_withdrawal"
            android:singleLine="true"
            android:background="@null"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_40"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_909090"
            android:hint="0.00"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="可提现金额："
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_909090"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_my_money"
                android:textStyle="bold"
                android:text="0.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_take_all"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"
            android:text="全部提现"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_741177"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_commit"
        android:gravity="center"
        android:text="确认提现"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/select_register_btn"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />


</LinearLayout>
