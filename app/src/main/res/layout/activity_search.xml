<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_back_white"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:background="@color/color_main"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/ysdjt"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_40"
            android:padding="@dimen/dp_13"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/rl_right"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="#FFFFFF"
                android:text="搜索"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@id/rl_right"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_halt_white_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="15dp"
                android:src="@drawable/ssxicon"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:id="@+id/edit_search"
                android:background="@null"
                android:textSize="14sp"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:textColorHint="#606060"
                android:textColor="#333333"
                android:hint="商品名称"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_tuijian"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="热门搜索"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <com.yx.Pharmacy.widget.flowtag.FlowTagLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="2dp"
                android:background="#FFFFFF"
                android:id="@+id/flowlayout_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="13dp"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="搜索历史"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginLeft="40dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_clear_history"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="清除历史"
                    android:textSize="14sp"
                    android:textColor="#606060"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <com.yx.Pharmacy.widget.flowtag.FlowTagLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="2dp"
                android:background="#FFFFFF"
                android:id="@+id/flowlayout_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>




    </RelativeLayout>



</LinearLayout>
