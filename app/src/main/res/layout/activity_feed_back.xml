<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_f6f6f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/rl_back"
            android:padding="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ysdjt"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:text="标题"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />


        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_more"
                android:text="暂无回复"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_909090"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_alignRight="@id/tv_more"
                android:layout_alignTop="@id/tv_more"
                android:src="@drawable/hdd"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_edit"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:textCursorDrawable="@drawable/shape_edit_cursor_color"
            android:singleLine="true"
            android:background="@null"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_909090"
            android:hint="请输入标题"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_white_edit"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:textCursorDrawable="@drawable/shape_edit_cursor_color"
            android:singleLine="true"
            android:background="@null"
            android:padding="@dimen/dp_6"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_909090"
            android:hint="请描述反馈内容"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="或通过以下方式联系我们！"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:lineSpacingExtra="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="微信公众号:源鑫药业\n联系邮箱：yuanxing@163.com\n咨询热线：0755-25464772"
        android:textSize="14sp"
        android:textColor="@color/color_909090"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
