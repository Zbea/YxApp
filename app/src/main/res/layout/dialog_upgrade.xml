<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/viewfinder_mask">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_title"
            android:src="@drawable/tcbj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:background="@drawable/shape_upgrade_bg"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:layout_below="@id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:id="@+id/tv_upgrade_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:tag="beta_title"
                android:textColor="@color/color_606060"
                android:textSize="14sp" />

            <TextView
                android:layout_below="@id/tv_upgrade_title"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="beta_upgrade_feature"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"
                android:layout_below="@id/tv_upgrade_title"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="beta_upgrade_info"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_gary_line_radiu"
                    android:gravity="center"
                    android:tag="beta_cancel_button"
                    android:text="下次再说"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/color_909090"
                    android:textSize="14sp" />


                <TextView
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_main_bg_radiu"
                    android:gravity="center"
                    android:tag="beta_confirm_button"
                    android:text="更新"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>