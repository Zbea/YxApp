<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/white_bg"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:text="原总金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0.00"
            android:id="@+id/tv_price"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_eaeaea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"/>

    <LinearLayout
        android:background="@drawable/white_bg"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:text="总金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0.00"
            android:id="@+id/tv_order_price"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_eaeaea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"/>
    <LinearLayout
        android:background="@drawable/white_bg"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:text="其中：参与以下优惠的金额"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/sp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0.00"
            android:id="@+id/tv_coupon_price"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    <LinearLayout
        android:background="@drawable/white_bg"
        android:id="@+id/ll_select_coupon"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <CheckBox
            android:id="@+id/cb_coupon"
            android:background="@drawable/selector_cb_shopcart"
            android:button="@null"
            android:clickable="false"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"/>
        <TextView
            android:text="优惠券"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_909090"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:text="无可用优惠券"
            android:id="@+id/tv_coupon_size"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_15"
            android:drawableRight="@drawable/xsqgckgdicon"
            android:drawablePadding="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_eaeaea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"/>

    <LinearLayout
        android:background="@drawable/white_bg"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:text="应付金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0.00"
            android:id="@+id/tv_money"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/white_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/dp_40">
        <CheckBox
            android:id="@+id/cb_discount"
            android:background="@drawable/selector_cb_shopcart"
            android:button="@null"
            android:layout_width="@dimen/dp_18"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_18"/>
        <TextView
            android:id="@+id/tv_overall_coupon"
            android:text="订单金额低于全场优惠价最低金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>