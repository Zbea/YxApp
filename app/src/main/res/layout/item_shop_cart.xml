<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginBottom="@dimen/dp_8"
              android:background="@drawable/white_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_type"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <ImageView
            android:id="@+id/iv_type"
            android:src="@drawable/icon_shopcar_flash_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_clear"
            android:drawablePadding="@dimen/dp_8"
            android:text="清空失效商品"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/text_light"
            android:drawableStart="@drawable/icon_cart_clear_disable"
            android:textSize="@dimen/sp_14"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_coupon"
            android:drawablePadding="@dimen/dp_8"
            android:drawableEnd="@drawable/xsqgckgdicon"
            android:text="去领券"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/color_main"
            android:textSize="@dimen/sp_15"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/color_eaeaea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"/>

    <LinearLayout
        android:background="@drawable/frame_white_bg"
        android:id="@+id/ll_open"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/wzkjt"
            android:textColor="#606060"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="展开列表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@drawable/frame_white_bg"
        android:visibility="gone"
        android:id="@+id/ll_close"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <TextView
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/yzkjt"
            android:textColor="#606060"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="收起列表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>