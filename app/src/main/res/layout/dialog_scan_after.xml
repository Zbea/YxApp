<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/ll_dialog">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/dp_300"
        android:layout_height="320dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_138">


                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_top_bg"
                    android:src="@drawable/tcbtbj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_138" />

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_product"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

            </RelativeLayout>

            <TextView
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:singleLine="true"
                android:textColor="@color/color_606060"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:singleLine="true"
                android:textColor="@color/color_main"
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_add_shopcar"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/jrgwcwxz"
                        android:layout_width="@dimen/dp_51"
                        android:layout_height="@dimen/dp_51" />
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="加入购物车"
                        android:textColor="#ABABAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_go_product_detail"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/jrgwcwxz"
                        android:layout_width="@dimen/dp_51"
                        android:layout_height="@dimen/dp_51" />
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="看商品详情"
                        android:textColor="#ABABAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_remember"
                android:padding="@dimen/dp_20"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_jizhu"
                    android:src="@drawable/jizhu_uncheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="记住我的选择"
                    android:textColor="#ABABAB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_10"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@drawable/icon_qrcode_close"/>

</LinearLayout>