<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_type_wuliu"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_173"
    android:orientation="vertical"
    android:background="@color/transparent_background">

    <LinearLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_white_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_message_jywl_max"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19" />

            <TextView
                android:id="@+id/tv_wuliu_name"
                android:text="交易物流"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_wuliu_time"
                android:text=""
                android:textColor="@color/color_606060"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_94">

            <RelativeLayout
                android:layout_width="@dimen/dp_85"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_wuliu"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80" />

                <TextView
                    android:id="@+id/tv_wuliu_num"
                    android:layout_margin="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="1"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:visibility="gone"
                    android:background="@drawable/shape_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:text="订单状态："
                        android:textColor="@color/color_606060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_wuliu_state"
                        android:text="已发货"
                        android:textColor="@color/color_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_wuliu_left2"
                        android:text="快递公司："
                        android:textColor="@color/color_606060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_wuliu_right2"
                        android:text="中通快递"
                        android:textColor="@color/color_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_wuliu_left3"
                        android:text="快递单号："
                        android:textColor="@color/color_606060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_wuliu_right3"
                        android:text=""
                        android:textColor="@color/color_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_bottom_desc"
                android:text="点击订单物流详情"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_wuliu_isread"
                android:visibility="gone"
                android:src="@drawable/gwcsltybj"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8" />
            <ImageView
                android:src="@drawable/arrrightgray"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8" />

        </RelativeLayout>


    </LinearLayout>





</LinearLayout>
