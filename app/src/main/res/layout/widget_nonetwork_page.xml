<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/zwtjmdwk"
        android:id="@+id/no_network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="搭乘的面面约航班去追寻诗和远方了~"
        android:id="@+id/no_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/base_text_color_light"
        />

    <TextView
        android:drawablePadding="@dimen/dp_6"
        android:drawableLeft="@drawable/load_state_ic"
        android:background="@drawable/selector_btn_state"
        android:text="重新加载"
        android:id="@+id/no_network_reload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingTop="@dimen/dp_6"
        android:textColor="@color/base_text_color_light"
        />


</LinearLayout>