<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/color_f6f6f6"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/dp_15"
                android:orientation="vertical"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_marginStart="@dimen/dp_15"
                        android:textColor="@color/color_909090"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:src="@drawable/icon_my_store_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/white_bg"
                android:gravity="center"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <EditText
                    android:id="@+id/edt_note"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="订单留言"
                    android:paddingStart="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_gay_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"/>
            </LinearLayout>


            <LinearLayout
                android:background="@drawable/white_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="原总金额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="0.00"
                    android:id="@+id/tv_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"/>

            <LinearLayout
                android:background="@drawable/white_bg"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="优惠总金额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="-0.00"
                    android:id="@+id/tv_coupon_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"/>

            <LinearLayout
                android:background="@drawable/white_bg"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="余额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="抵扣"
                    android:textColor="@color/color_909090"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="-￥0.00"
                    android:id="@+id/tv_yue_price"
                    android:textColor="@color/color_741177"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <com.yx.Pharmacy.widget.SwitchButton
                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/sb_button_yue"
                    app:sb_enable_effect="true"
                    app:sb_checked="false"
                    app:sb_checked_color="@color/color_741177"
                    app:sb_show_indicator="false"
                    app:sb_border_width="@dimen/dp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"/>

            <LinearLayout
                android:background="@drawable/white_bg"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="应付总金额"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="0.00"
                    android:id="@+id/tv_order_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/white_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:textStyle="bold"
                    android:text="开具发票"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="公司名"
                    android:id="@+id/tv_company_name"
                    android:textColor="@color/color_909090"
                    android:textSize="@dimen/sp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.yx.Pharmacy.widget.SwitchButton
                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/sb_button_company"
                    app:sb_enable_effect="true"
                    app:sb_checked="true"
                    app:sb_checked_color="@color/color_741177"
                    app:sb_show_indicator="false"
                    app:sb_border_width="@dimen/dp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="商品清单"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_product_num"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="数量28"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#d4d4d4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_open"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableRight="@drawable/wzkjt"
                    android:textColor="#606060"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="展开列表"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_order_list"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/view_gift_line"
                    android:background="@color/color_f6f6f6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"/>
                <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/recyclerView_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:visibility="gone"-->
                <!--android:background="@drawable/white_bg"-->
                <!--android:id="@+id/recyclerView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_close"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableRight="@drawable/yzkjt"
                    android:textColor="#606060"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="收起列表"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:background="@drawable/white_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:layout_marginTop="@dimen/dp_3"
            android:text="应付金额"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_pay_price"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_3"
            android:textColor="@color/color_741177"
            android:textSize="@dimen/sp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:background="@drawable/gradient_zi_bg"
        android:id="@+id/tv_create_order"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:text="提交订单"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
</LinearLayout>