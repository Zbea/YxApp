<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_type_arrive_notice"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent_background">

    <LinearLayout
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_white_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_message_dhtz_ma"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19" />

            <TextView
                android:id="@+id/tv_arrive_notice_name"
                android:text="到货提醒"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_arrive_note_time"
                android:text="2014-05-06"
                android:textColor="@color/color_606060"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92">

            <RelativeLayout
                android:layout_width="@dimen/dp_85"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_arrive_notice"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80" />

                <TextView
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="1"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:background="@drawable/shape_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:id="@+id/tv_arrive_notice_title"
                    android:text="商品名称："
                    android:textColor="@color/color_333333"
                    android:layout_width="match_parent"
                    android:paddingRight="@dimen/dp_12"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_2"
                    android:id="@+id/tv_arrive_notice_company"
                    android:text="公司"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_606060"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_arrive_notice_price"
                        android:text="22.00"
                        android:textColor="@color/color_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_12"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_arrive_notice_gg"
                        android:text="gg"
                        android:textColor="@color/color_606060"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">


            <TextView
                android:id="@+id/tv_arrive_notice_bottom_desc"
                android:text="点击前往商品详情"
                android:textColor="@color/color_333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_arrive_notice_isread"
                android:visibility="gone"
                android:src="@drawable/gwcsltybj"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8" />
            <ImageView
                android:src="@drawable/arrrightgray"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8" />

        </RelativeLayout>


    </LinearLayout>





</LinearLayout>
