<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_type_youhui"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_background">

    <android.support.v7.widget.CardView
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_youhui"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="139dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_message_yhcx_ma"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19" />

                <TextView
                    android:id="@+id/tv_youhui_name"
                    android:text="优惠促销"
                    android:textColor="@color/color_333333"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="优惠促销"
                    android:textColor="@color/color_333333"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_youhui_time"
                    android:text="2014-05-06"
                    android:textColor="@color/text_light"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">


                <TextView
                    android:id="@+id/tv_youhui_bottom_desc"
                    android:text="来这里采购可享受4.2折优惠！点击前往"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_youhui_isread"
                    android:visibility="gone"
                    android:src="@drawable/gwcsltybj"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8" />
                <ImageView
                    android:src="@drawable/arrrightgray"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8" />

            </RelativeLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>
