<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_bg"
    android:fitsSystemWindows="true">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:id="@+id/rl_wechat_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@drawable/wxzffs"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="微信"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="WECHAT PAY"
            android:textColor="@color/color_606060"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:src="@drawable/icon_pay_selected"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_select_wechat_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@drawable/zfbfkfs"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="支付宝"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="ALIPAY"
            android:textColor="@color/color_606060"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:src="@drawable/icon_pay_selected"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_select_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_public_pay"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_60">
        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:src="@drawable/dgzzzffs"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="对公转账"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_58"
            android:text="PUBLIC"
            android:textColor="@color/color_606060"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:src="@drawable/icon_pay_selected"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_select_public_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/icon_pay_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:text="选择对公转账的情况下，生成未支付订单，后台财务操作支付完成后，转成正常订单。"
            android:paddingRight="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_pay"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:text="去付款"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_main_bg_radiu"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

</LinearLayout>
