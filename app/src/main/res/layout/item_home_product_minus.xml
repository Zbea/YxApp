<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingTop="@dimen/dp_3"
              android:paddingBottom="@dimen/dp_3"
              android:paddingStart="@dimen/dp_10"
              android:paddingEnd="@dimen/dp_10"
              android:background="@drawable/white_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:background="@drawable/shape_cart_line_gray"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_92">
        <ImageView
            android:id="@+id/iv_product"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"/>
        <TextView
            android:id="@+id/tv_validity_time"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_8"
            android:text="有效期:"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/icon_validity_bg"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_presale"
            android:src="@drawable/ysbjicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:id="@+id/tv_title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:id="@+id/tv_scqy"
            android:textColor="@color/color_909090"
            android:textSize="@dimen/sp_11"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:id="@+id/tv_levelnote"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_9"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/dp_4"
                android:id="@+id/tv_oldprice"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/color_909090"
                android:textSize="@dimen/sp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_gg"
                android:textColor="@color/color_909090"
                android:textSize="@dimen/sp_11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_sale"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>