                    android:paddingRight="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_my_store_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <View
                android:background="@color/color_f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"/>
            <LinearLayout
                android:id="@+id/ll_note"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_marginTop="@dimen/dp_12"
                    android:padding="@dimen/dp_5"
                    android:background="@drawable/shape_gay_bg"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="请帮我尽快发货，检查好商品，谢谢！"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40" />
                <View
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="#f6f6f6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"/>

            </LinearLayout>



            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="原总金额"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="￥454613"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="优惠总金额"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="-￥454"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="折扣率"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_dikou"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="抵扣-￥2"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="合计"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="￥23333"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/white_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="实付金额"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_price_payed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="￥23333"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea" />
            </RelativeLayout>


            <View
                android:background="@color/color_f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"/>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:id="@+id/rl_paytype"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="支付方式"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_paytype"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_invoice"
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="开具发票"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_storename"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/base_text_color_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mzzqckgd"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="下单时间"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="2018/11/22 12:04:38"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:id="@+id/rl_pay_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="付款时间"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_pay_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="2018/11/22 12:04:38"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="订单编号"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="134875464354165741"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<View-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:background="#eaeaea"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/dp_0_5"/>-->
            </RelativeLayout>

            <View
                android:background="@color/color_f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"/>
            <RelativeLayout
                android:background="@drawable/white_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:text="商品清单"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_product_num"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="数量28"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#eaeaea"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
            </RelativeLayout>

            <LinearLayout
                android:background="@drawable/frame_white_bg"
                android:id="@+id/ll_open"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableRight="@drawable/wzkjt"
                    android:textColor="#606060"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="展开列表"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_order_list"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/view_gift_line"
                    android:background="@color/color_f6f6f6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"/>
                <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/recyclerView_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:background="@drawable/frame_white_bg"
                android:visibility="gone"
                android:id="@+id/ll_close"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:drawablePadding="@dimen/dp_3"
                    android:drawableRight="@drawable/yzkjt"
                    android:textColor="#606060"
                    android:gravity="center"
                    android:textSize="@dimen/sp_14"
                    android:text="收起列表"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_detail_todo"
        android:background="@drawable/shape_btn_main"
        android:gravity="center"
        android:text="去付款"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />


    <include layout="@layout/include_error_net"/>
</LinearLayout>