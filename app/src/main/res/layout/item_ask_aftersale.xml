<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/jizhu_uncheck"
        android:layout_marginLeft="@dimen/dp_12"
        android:id="@+id/iv_is_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/iv_product"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="哈哈"
            android:layout_marginTop="@dimen/dp_18"
            android:id="@+id/tv_title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_order_company"
            android:textColor="@color/color_606060"
            android:text="白云药业公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:id="@+id/tv_price"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textColor="@color/color_main"
            android:text="320.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_12"
            android:id="@+id/tv_order_unit"
            android:textColor="@color/color_606060"
            android:text="盒/10片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.yx.Pharmacy.widget.AmountView
            android:id="@+id/amount_view"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_company"
            app:btnTextSize="@dimen/sp_14"
            app:btnWidth="@dimen/dp_30"
            app:tvWidth="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_27"/>

    </RelativeLayout>



</LinearLayout>
