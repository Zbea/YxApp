<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/rl_dialog">

    <RelativeLayout
        android:id="@+id/rl_signin"
        android:layout_centerHorizontal="true"
        android:layout_width="245dp"
        android:layout_height="246dp">

        <ImageView
            android:src="@drawable/popup_integral"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginTop="32dp"
            android:layout_marginLeft="128dp"
            android:text="+5"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:text="已成功签到1天"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_marginTop="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:text="积分可用于兑换优惠卷"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/rl_signin"
        android:src="@drawable/tctyxxxxxxxxxxx"
        android:layout_alignParentRight="true"
        android:layout_width="26dp"
        android:layout_height="26dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_signin"
        android:layout_marginTop="20dp"
        android:background="@drawable/qdqdhan"
        android:gravity="center"
        android:text="去兑换"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="245dp"
        android:layout_height="40dp" />



</RelativeLayout>